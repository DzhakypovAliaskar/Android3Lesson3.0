<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.WeatherFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/city"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/oval_card_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/location_cl"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/oval_name_city"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/card_cl">

                <TextView
                    android:id="@+id/location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:text="Bishkek "
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/location_place"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/location_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_place"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15sp"
                android:text="sunday, 19 May 2021 | 00:00pm"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:src="@drawable/cloud"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date" />

            <TextView
                android:id="@+id/cloud_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cloud"
                tools:text="Sunny" />

            <ImageView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/humidity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cloud_tv" />

            <TextView
                android:id="@+id/humidity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/humidity"
                tools:text="49%" />

            <ImageView
                android:id="@+id/sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/sunrise"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/humidity_tv" />

            <TextView
                android:id="@+id/sunrise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sunrise"
                tools:text="6:00 AM" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/temp_cl"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="70dp"
                app:layout_constraintStart_toEndOf="@+id/cloud"
                app:layout_constraintTop_toTopOf="@+id/card_cl">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/temperature_tv"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="45dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@id/cloud"
                app:layout_constraintTop_toBottomOf="@+id/date"
                tools:text="33" />

            <ImageView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:src="@drawable/temperature"
                app:layout_constraintStart_toEndOf="@+id/temp_cl"
                app:layout_constraintTop_toBottomOf="@+id/date" />

            <ImageView
                android:id="@+id/pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/pressure"
                app:layout_constraintStart_toEndOf="@+id/humidity"
                app:layout_constraintTop_toBottomOf="@+id/temp_cl" />

            <TextView
                android:id="@+id/pressure_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/humidity"
                app:layout_constraintTop_toBottomOf="@id/pressure"
                tools:text="1,007mBar" />

            <ImageView
                android:id="@+id/sunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/sunset"
                app:layout_constraintStart_toEndOf="@+id/sunrise"
                app:layout_constraintTop_toBottomOf="@+id/pressure_tv" />

            <TextView
                android:id="@+id/sunset_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/sunrise_tv"
                app:layout_constraintTop_toBottomOf="@+id/sunset"
                tools:text="19:00 AM" />

            <TextView
                android:id="@+id/max_temperature_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="35dp"
                android:text="35 C"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/degree"
                app:layout_constraintTop_toBottomOf="@+id/location_cl" />

            <ImageView
                android:id="@+id/arrow_upward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_arrow_upward"
                app:layout_constraintStart_toEndOf="@+id/max_temperature_tv"
                app:layout_constraintTop_toBottomOf="@+id/location_cl" />

            <TextView
                android:id="@+id/min_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="143dp"
                android:layout_marginTop="2dp"
                android:text="25 C"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/temp_cl"
                app:layout_constraintTop_toBottomOf="@+id/max_temperature_tv" />

            <ImageView
                android:id="@+id/arrow_downward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="64dp"
                android:background="@drawable/ic_arrow_downward"
                app:layout_constraintStart_toEndOf="@+id/min_temperature"
                app:layout_constraintTop_toBottomOf="@+id/location_cl" />

            <ImageView
                android:id="@+id/wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/speed"
                app:layout_constraintStart_toEndOf="@+id/pressure"
                app:layout_constraintTop_toBottomOf="@+id/min_temperature" />

            <TextView
                android:id="@+id/speed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="20км/ч"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/pressure_tv"
                app:layout_constraintTop_toBottomOf="@+id/wind_speed" />

            <ImageView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/time"
                app:layout_constraintStart_toEndOf="@+id/sunset"
                app:layout_constraintTop_toBottomOf="@+id/speed_tv" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:text="20ч 12м"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/sunset_tv"
                app:layout_constraintTop_toBottomOf="@+id/time" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>